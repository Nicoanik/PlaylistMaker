<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_settings"
    tools:context=".settings.ui.fragment.SettingsFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/ModeFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"
        android:text="@string/settings"
        android:textSize="@dimen/text_22sp"
        style="@style/toolbar" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/themeSwitcher"
        android:layout_marginTop="24dp"
        android:text="@string/dark_theme"
        style="@style/button_activity_settings" />

    <TextView
        android:id="@+id/share_button_settings"
        android:text="@string/share_the_app"
        app:drawableEndCompat="@drawable/ic_share_24"
        style="@style/button_activity_settings" />

    <TextView
        android:id="@+id/support_button_settings"
        android:text="@string/write_to_support"
        app:drawableEndCompat="@drawable/ic_support_24"
        style="@style/button_activity_settings" />

    <TextView
        android:id="@+id/agreement_button_settings"
        android:text="@string/user_agreement"
        app:drawableEndCompat="@drawable/ic_forward_arrow_24"
        style="@style/button_activity_settings" />
</LinearLayout>
