<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_button_settings"
            android:layout_width="@dimen/back_button"
            android:layout_height="@dimen/back_button"
            android:scaleType="center"
            android:background="@color/white"
            android:src="@drawable/vector_back"
            tools:ignore="ContentDescription"
            android:layout_marginEnd="@dimen/padding_settings" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/settings"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/middle_text"
            style="@style/TextStyleMedium"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:paddingStart="@dimen/padding_main"
        android:paddingEnd="@dimen/padding_settings">

        <com.google.android.material.switchmaterial.SwitchMaterial
            style="@style/TextStyleRegular"
            android:layout_width="match_parent"
            android:layout_height="@dimen/frame_height"
            android:text="@string/dark_theme"
            android:textColor="@color/settings_text"
            android:textSize="@dimen/small_text"
            app:thumbTint="@color/text_gray"
            app:trackTint="@color/light_gray" />

        <TextView
            style="@style/TextStyleRegular"
            android:layout_width="match_parent"
            android:layout_height="@dimen/frame_height"
            android:gravity="center_vertical"
            android:text="@string/share_the_app"
            android:textColor="@color/settings_text"
            android:textSize="@dimen/small_text"
            app:drawableEndCompat="@drawable/vector_share" />

        <TextView
            style="@style/TextStyleRegular"
            android:layout_width="match_parent"
            android:layout_height="@dimen/frame_height"
            android:gravity="center_vertical"
            android:text="@string/write_to_support"
            android:textColor="@color/settings_text"
            android:textSize="@dimen/small_text"
            app:drawableEndCompat="@drawable/vector_support" />

        <TextView
            style="@style/TextStyleRegular"
            android:layout_width="match_parent"
            android:layout_height="@dimen/frame_height"
            android:gravity="center_vertical"
            android:text="@string/user_agreement"
            android:textColor="@color/settings_text"
            android:textSize="@dimen/small_text"
            app:drawableEndCompat="@drawable/vector_agreement" />

    </LinearLayout>
</LinearLayout>