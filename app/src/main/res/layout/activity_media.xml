<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_media"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".media.ui.activity.MediaActivity"
    style="@style/ModeActivity">

    <ImageView
        android:id="@+id/back_button_media"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        android:scaleType="center"
        android:src="@drawable/ic_back_arrow_24"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTag="toolBar"
        style="@style/toolbar" />

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintStart_toEndOf="@+id/back_button_media"
        app:layout_constraintTop_toTopOf="@id/back_button_media"
        app:layout_constraintBottom_toBottomOf="@id/back_button_media"
        android:layout_marginStart="@dimen/dp_12"
        android:text="@string/media_activity"
        android:textSize="@dimen/text_22sp"
        style="@style/toolbar"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/toolBarBarrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_tags="toolBar"
        app:barrierDirection="bottom"
        app:barrierMargin="@dimen/dp_4" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        app:layout_constraintTop_toTopOf="@id/toolBarBarrier"
        app:tabMode="fixed"
        app:tabIndicatorFullWidth="true"
        app:tabIndicator="@drawable/custom_tub_indicator"
        app:tabTextAppearance="@style/TabLayoutText"
        style="@style/custom_tab_layout"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="104dp"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>