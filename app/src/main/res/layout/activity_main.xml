<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    style="@style/ModeActivityMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/padding_main"
    android:paddingTop="14dp"
    android:paddingBottom="28dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/middle_text"
        style="@style/TextStyleMedium500"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="40dp">

        <Button
            android:id="@+id/search_button"
            style="@style/button_activity_main"
            android:text="@string/search"
            app:icon="@drawable/vector_search" />

        <Button
            style="@style/button_activity_main"
            android:layout_marginVertical="@dimen/padding_main"
            android:id="@+id/media_button"
            android:text="@string/media_library"
            app:icon="@drawable/vector_media" />

        <Button
            style="@style/button_activity_main"
            android:id="@+id/settings_button"
            android:text="@string/settings"
            app:icon="@drawable/vector_settings" />

    </LinearLayout>


</LinearLayout>