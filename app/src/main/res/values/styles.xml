<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ModeActivityMain">
        <item name="android:background">@color/blue</item>
    </style>
    <style name="ModeActivitySettings">
        <item name="android:background">@color/white</item>
    </style>
    <style name="ModeActivitySearch">
        <item name="android:background">@color/white</item>
    </style>
    <style name="TextStyleMedium500">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="TextStyleRegular400">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>
    <style name="button_activity_main" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginHorizontal">@dimen/main</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/main</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/middle_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/between_icon</item>
        <item name="iconTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="button_activity_settings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/frame_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/settings_text</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="thumbTint">@color/switch_thumb_selector</item>
        <item name="trackTint">@color/switch_track_selector</item>
        <item name="android:drawableTint">@color/text_gray</item>
        <item name="android:paddingStart">@dimen/main</item>
        <item name="android:paddingEnd">@dimen/padding_12</item>
    </style>
    <style name="toolbar">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/middle_text</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="tint">@color/black</item>
    </style>
    <style name="edit_text">
        <item name="android:backgroundTint">@color/light_gray</item>
        <item name="android:textColorHint">@color/text_gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/light_gray</item>
        <item name="tint">@color/text_gray</item>
        <item name="android:drawableTint">@color/text_gray</item>
    </style>
</resources>